{
    "extends": [
        "react-app",
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "prettier",
        "cypress"
    ],
    "env": {
        "cypress/globals": true
    },
    "rules": {
        "semi": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": [
           "off"
        ]
    }
}